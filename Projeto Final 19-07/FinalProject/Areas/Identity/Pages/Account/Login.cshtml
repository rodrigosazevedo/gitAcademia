@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-md-center">
    <div class="col-6">
        <h1 class="text-center">@ViewData["Title"]</h1>
        <form id="account" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control form-control-lg mb-2" aria-required="true" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control form-control-lg mb-2" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div>
                <div class="checkbox">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mt-4 mb-2">Entrar</button>
            </div>
            <div>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Cadastrar-se</a>
            </div>
        </form> 
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model IEnumerable<FinalProject.Models.Specialization>

@{
    ViewData["Title"] = "Especializações";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Especializações <a class = "btn btn-success" asp-action="Create">Novo</a></h2>


<table class="table table-striped text-center table-bordered">
    <thead class="table-primary">        
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="align-middle">
            <td> 
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a class = "btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                <a class = "btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>

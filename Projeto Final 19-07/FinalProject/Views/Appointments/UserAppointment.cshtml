@model FinalProject.Models.AppointmentSlot

@{
    ViewData["Title"] = "Consultas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Marcar Consulta</h2>

<hr />
<div class="row justify-content-md-center">
    <div class="col-6">
        <form asp-action="CreateUserAppointment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PatientId" id="Patient" class="form-control" value="@ViewData["PatientId"]"/>
            <div class="form-floating">
                <input asp-for="Start" class="form-control form-control-lg-2 mb-2" aria-required="true" />
                <label asp-for="Start"></label>
                <span asp-validation-for="Start" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <select asp-for="ExamId" class ="form-control form-control-lg-2 mb-2" asp-items="ViewBag.ExamId"></select>
                <label asp-for="ExamId" class="control-label"></label>
                <span asp-validation-for="ExamId" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <select asp-for="DoctorId" class ="form-control form-control-lg-2 mb-2" asp-items="ViewBag.DoctorId"></select>
                <label asp-for="DoctorId" class="control-label"></label>
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Marcar" class="w-100 btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
